# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# JSON files
*.json text eol=lf

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Config files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Text files
*.txt text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.bin binary
*.so binary
*.dylib binary

