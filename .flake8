[flake8]
# Разумные лимиты для проекта
max-line-length = 120
max-complexity = 15

# Игнорируем некритичные warnings
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator

# Исключаем файлы
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info

# Показываем статистику
statistics = True
count = True
show-source = True
